{
  "name": "arebyte-plugin-v4",
  "displayName": "Arebyte plugin v4",
  "version": "0.0.1",
  "description": "Arebyte Plugin: digital art from your browser",
  "author": "enBloc <hello@enbloc.uk>",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "prepare": "husky",
    "test": "NODE_OPTIONS='--experimental-vm-modules' pnpm jest",
    "test:changed": "NODE_OPTIONS='--experimental-vm-modules' pnpm jest -o"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "@strapi/blocks-react-renderer": "^1.0.1",
    "plasmo": "0.89.2",
    "qs": "^6.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^4.0.13",
    "webextension-polyfill": "^0.12.0",
    "yup": "^1.4.0",
    "zustand": "5.0.0-rc.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/chrome": "0.0.258",
    "@types/jest": "^29.5.13",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/webextension-polyfill": "^0.12.1",
    "eslint": "^9.10.0",
    "eslint-plugin-react": "^7.36.1",
    "formik": "^2.4.6",
    "globals": "^15.9.0",
    "https-browserify": "^1.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-webextension-mock": "^3.9.0",
    "lint-staged": "^15.2.10",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.0",
    "prettier": "3.2.4",
    "react-transition-group": "^4.4.5",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.6.0",
    "util": "^0.12.3",
    "webextension-polyfill": "^0.12.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "manifest": {
    "homepage_url": "$PLASMO_PUBLIC_SITE_URL",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "alarms",
      "tabs",
      "activeTab",
      "storage"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "{013da1a4-7fc0-4f54-8bb8-37e575903c25}"
      }
    }
  }
}
